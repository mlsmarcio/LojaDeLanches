@{
    ViewData["Title"] = "UploadFiles";
}

<img src="~/images/upload2.png" width="200" height="150" />

<hr />

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        @if (ViewData["Erro"] != null)
        {
            <img src="~/images/erro1.png" width="150" height="150" />
            <h4>@ViewData["Erro"]</h4>
        }
    </div>

    <div class="row">
        @if (ViewData["Resultado"] != null)
        {
            <h4>@ViewData["Resultado"]</h4>
            <hr />
            @if (ViewBag.Arquivos != null)
            {
              
                @foreach (string arquivo in ViewBag.Arquivos)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="card p-2 shadow-sm">
                            <div class="card-body text-center">
                                <i class="bi bi-file-earmark-text fs-1 text-primary"></i> <!-- ícone opcional -->
                                <p class="mt-2 mb-0 text-truncate">@arquivo</p>
                            </div>
                        </div>
                    </div>
                }
                
            }
        }
    </div>
</div>
